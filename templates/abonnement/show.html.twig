{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Abonnement{% endblock %}

{% block datatables_css %}{% endblock %}

{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Abonnements</h1> <a href="{{path('abonnement_index')}}" class="call-action btn">Liste abonnement</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ abonnement.id }}</td>
                    </tr>
                    <tr>
                        <th>DateCreation</th>
                        <td>{{ abonnement.dateCreation ? abonnement.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>DateEcheance</th>
                        <td>{{ abonnement.dateEcheance ? abonnement.dateEcheance |date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ abonnement.tarif }}</td>
                    </tr>
                    <tr>
                        <th>Tarif</th>
                        <td>{{ abonnement.tarif }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="detail-group-btn">
        <a href="{{ path('abonnement_edit', {'id': abonnement.id}) }}" class="btn call-action">Modifier</a>
        {{ include('abonnement/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block validation_js %}{% endblock %}
{% block datatables_js %}{% endblock %}

