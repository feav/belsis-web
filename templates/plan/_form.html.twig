{{ form_start(form) }}
	<div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Nom <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6">
        	{{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'required':'required'} }) }}
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="email">Tarif <span class="required">*</span><small>Fcfa</small>
        </label>
        <div class="col-md-6 col-sm-6">
	        {{ form_widget(form.tarif, { 'attr': {'class': 'form-control', 'required':'required'}} ) }}
	    </div>
    </div>
    <div class="item form-group duree-wrapper">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="email">Durée <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6">
	        <select name="duree_select" id="duree_select" class="form-control">
	        	<option value="1">journalier</option>
	        	<option value="30">mensuelle</option>
	        	<option value="365">annuelle</option>
	        	<option value="">personaliser</option>
	        </select>
	        <div class="animated fadeIn custom_duree" style="display: none;margin-top: 13px;">
	        	<input type="number" name="custom_duree" class="form-control" placeholder="durée en jours">
		    </div>
	    </div>
    </div>
    <div class="ln_solid"></div>
	<div class="form-group">
		<div class="offset-md-3">
		  <button class="btn call-action">{{ button_label|default('Enregistrer') }}</button>
		</div>
	</div>
{{ form_end(form) }}
<script type="text/javascript">
	mySelect = document.getElementById('duree_select');
	mySelect.onchange = (event) => {
		var inputValue = event.target.value;
		if(inputValue) {
			console.log(inputValue);
			$('.duree-wrapper .custom_duree').css('display', 'none');
			
		}
		else{
			console.log(inputValue);
			$('.duree-wrapper .custom_duree').css('display', 'block');
		}
	}
</script>