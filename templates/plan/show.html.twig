{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Plan{% endblock %}

{% block datatables_css %}{% endblock %}

{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Plan</h1> <a href="{{path('plan_index')}}" class="call-action btn">Liste plan</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ plan.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ plan.nom }}</td>
                    </tr>
                    <tr>
                        <th>Tarif</th>
                        <td>{{ plan.tarif }}</td>
                    </tr>
                    <tr>
                        <th>Duree</th>
                        <td>{{ plan.duree }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="detail-group-btn">
        <a href="{{ path('plan_edit', {'id': plan.id}) }}" class="btn call-action">Modifier</a>
        {{ include('plan/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block validation_js %}{% endblock %}
{% block datatables_js %}{% endblock %}
