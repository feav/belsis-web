{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
  {% trans_default_domain 'FOSUserBundle' %}

  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
    <div>
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <form action="{{ path("fos_user_security_check") }}" method="post">
              {% if csrf_token %}
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
              {% endif %}
              <h1>Connexion</h1>
              <div>
                <input type="text" class="form-control" placeholder="Nom d'utilisateur"  id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
              </div>
              <div>
                <input type="password" id="password" placeholder="Mot de passe" class="form-control" name="_password" required="required" autocomplete="current-password" />
              </div>
              <div>
                {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Se rapeller de moi</label>#}
                <a class="reset_pass" href="{{path('fos_user_resetting_request')}}">mot de passe?</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">Vous etes nouveau?
                  <a href="{{path('fos_user_registration_register')}}" class="to_register"> cr√©er un compte </a>
                </p>

                <div class="clearfix"></div>
                <div>
                  <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
              </div>
            </form>
          </section>
        </div>
      </div>
    </div>

{% endblock fos_user_content %}
