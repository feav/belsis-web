{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Paiement{% endblock %}

{% block datatables_css %}{% endblock %}

{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Paiements</h1> <a href="{{path('paiement_index')}}" class="call-action btn">Liste paiements</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ paiement.id }}</td>
                    </tr>
                    <tr>
                        <th>DateCreation</th>
                        <td>{{ paiement.dateCreation ? paiement.dateCreation|date('Y-m-d H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Montant</th>
                        <td>{{ paiement.montant }}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="detail-group-btn">
        <a href="{{ path('paiement_edit', {'id': paiement.id}) }}" class="btn call-action">Modifier</a>
        {{ include('paiement/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block validation_js %}{% endblock %}
{% block datatables_js %}{% endblock %}
{% block script %}
    <script type="text/javascript">
        $('.nav.side-menu .item-menu-paiement').addClass('active');
    </script>
{% endblock %} 