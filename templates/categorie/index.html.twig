{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Categorie{% endblock %}

{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Liste des categories</h1> <a href="{{path('categorie_new')}}" class="call-action btn">Nouvelle categorie</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <div class="card-box table-responsive">
                <table id="datatable-responsive" class="table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Restaurant</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.restaurant.nom }}</td>
                            <td>{{ categorie.nom }}</td>
                            <td>{{ categorie.description }}</td>
                            <td><img class="hg-35 in-table" src="{{ asset('images/uploads/categorie/' ~ categorie.image) }}" /></td>
                            <td>
                                <a href="{{ path('categorie_show', {'id': categorie.id}) }}">detail</a>
                                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
    </div>
{% endblock %}

{% block validation_js %}
{% endblock %}