{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Categorie{% endblock %}


{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Categorie</h1> <a href="{{path('categorie_index')}}" class="call-action btn">Liste categories</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ categorie.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ categorie.nom }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ categorie.description }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img class="hg-35 in-table" src="{{ asset('images/uploads/categorie/' ~ categorie.image) }}" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="detail-group-btn">
        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn call-action">Modifier</a>
        {{ include('categorie/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block validation_js %}{% endblock %}
{% block datatables_js %}{% endblock %}
