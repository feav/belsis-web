{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.nom }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>Stocks</th>
            <td>{% for stk in produit.stock %}
                    <span>{{ stk }}</span>
                    {% if not loop.last %}
                        |
                    {% endif %}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img class="hg-35" src="{{ asset('uploads/produits/' ~ produit.image) }}" /></td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
