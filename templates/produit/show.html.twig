{% extends 'backOffice/layout.html.twig' %}

{% block title %}{{parent()}} | Produit{% endblock %}


{% block bo_content %}
    <div class="row-title">
        <h1 class="title">Produit</h1> <a href="{{path('produit_index')}}" class="call-action btn">Liste Produits</a>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ produit.nom }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
                <tr>
                    <th>Stocks</th>
                    <td>{% for stk in produit.stock %}
                            <span>{{ stk }}</span>
                            {% if not loop.last %}
                                |
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img class="hg-35 in-table" src="{{ asset('uploads/produits/' ~ produit.image) }}" /></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="detail-group-btn">
        <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn call-action">Modifier</a>
        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
{% block validation_js %}{% endblock %}
{% block datatables_js %}{% endblock %}
